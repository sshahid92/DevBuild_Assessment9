@model DevBuild_Assessment6_PutMeOnTheList.Models.RegistrationModel
@{
    ViewBag.Title = "Registration";
}

<h2>Registration</h2>

<form action="~/Identity/Registration" method="post" class="form-group">
    @Html.ValidationSummary()
    <div class="form-group">
        UserName<input type="text" name="UserName" class="form-control"/><br />
    </div>
    <div class="form-group">
        Email<input type="text" name="Email" class="form-control"/><br />
    </div>
    <div class="form-group">
        Password<input type="password" name="Password" class="form-control"/><br />
    </div>
    <div class="form-group">
        Confirm Password<input type="password" name="ConfirmPassword" class="form-control"/><br />
    </div>
    
    <input type="submit" class="btn btn-default" />
</form>

